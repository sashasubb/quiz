<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="LoadingActivityStyle" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/background</item>
    </style>

    <style name="MainActivityStyle" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/start_background</item>
    </style>

    <style name="GameActivityStyle" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/background</item>
    </style>

    <style name="ResultActivityStyle" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/background</item>
    </style>

</resources>
